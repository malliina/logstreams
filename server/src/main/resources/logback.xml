<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="LOGSTREAMS" class="com.malliina.logstreams.client.FS2Appender">
        <endpoint>${LOGSTREAMS_HOST:-wss://logs.malliina.com/ws/sources}</endpoint>
        <enabled>${LOGSTREAMS_ENABLED:-false}</enabled>
        <username>${LOGSTREAMS_USER:-logstreams}</username>
        <password>${LOGSTREAMS_PASS:-changeme}</password>
    </appender>
    <logger name="com.malliina.logstreams.http4s.LogSockets" level="WARN"/>
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="LOGSTREAMS"/>
    </root>
</configuration>
